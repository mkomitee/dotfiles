[user]
    name = Michael Komitee

[core]
    pager = less -FRXMQigMws
    editor = emacsclient -q -a emacs
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.dotfiles/gitignore

[log]
    abbrevcommit = yes
    decorate = short
    date = short

[alias]
    dc = diff --cached
    ds = diff --staged

    co = checkout
    ci = commit -v

    st = status -sb

    amend = commit --amend -v --no-edit
    reword = commit --amend -v
    fixup = commit --fixup HEAD

    aa = add -A :/
    branches = branch -avv
    remotes = remote -v
    tags = tag -l
    shelve = stash save --include-untracked
    unshelve = stash pop

[pager]
    status = yes
    show-branch = yes

[clean]
    requireForce = no

[format]
    pretty = oneline

[pretty]
    # ffffffff YYYY-MM-DD (refs) Subject
    oneline-date = "format:%C(auto)%h %C(blue)%ad%C(auto)%d %C(reset)%s"
    # ffffffff Author Name (refs) Subject
    oneline-author = "format:%C(auto)%h %C(blue)%aN%C(auto)%d%C(reset)% s"
    # ffffffff YYYY-MM-DD Author Name (refs) Subject
    oneline-date-author = "format:%C(auto)%h %C(blue)%ad %C(yellow)%aN%C(auto)%d%C(reset)% s"

[diff]
    algorithm = patience
    renames = copies

[pull]
    ff = yes

[github]
    user = mkomitee

[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"

[tig]
    show-author = no
    show-date = no
    show-rev-graph = yes

[merge]
    log = true
    ff = no

[mergetool]
    prompt = false

[credential]
    helper = cache

[grep]
    lineNumber = true

[rerere]
    enabled = true
