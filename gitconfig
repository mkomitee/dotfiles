    email = mkomitee@gmail.com

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"] 
    current = yellow reverse 
    local = yellow 
    remote = green 
 
[color "diff"] 
    meta = yellow
    frag = magenta
    old = red
    new = blue
 
[color "status"] 
    added = yellow 
    changed = green 
    untracked = cyan 
 
[core] 
    pager = less -FRSX 
    editor = emacsclient
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol 
    excludesfile = ~/dotfiles/gitignore
 
[alias] 
    head = log -1
    stat = status
    st = status
    ci = commit
    co = checkout 
    di = diff
    dc = diff --cached
    aa = add --all
    sm = submodule
    wc = whatchanged
    commit = commit -v

