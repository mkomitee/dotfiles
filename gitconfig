[user]
    name = Michael Komitee

[core]
    pager = less -FRXMQigMws
    editor = emacsclient -q -a emacs
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.dotfiles/gitignore

[log]
    abbrevcommit = yes
    decorate = short

[alias]
    dc = diff --cached
    ds = diff --staged

    co = checkout
    ci = commit -v

    st = status -sb

    amend = commit --amend -v --no-edit
    reword = commit --amend -v
    fixup = commit --fixup HEAD

    aa = add -A :/
    branches = branch -avv
    remotes = remote -v
    tags = tag -l
    shelve = stash save --include-untracked
    unshelve = stash pop

[pager]
    status = yes
    show-branch = yes

[clean]
    requireForce = no

[format]
    pretty = oneline

[diff]
    algorithm = patience

[pull]
    ff = yes

[github]
    user = mkomitee

[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"

[tig]
    show-author = no
    show-date = no
    show-rev-graph = yes

[mergetool]
    prompt = false

[credential]
    helper = cache

[grep]
    lineNumber = true

[rerere]
    enabled = true
