[user]
    name = Michael Komitee
    email = komitee@deshaw.com

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = blue

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core] 
    pager = less -FRSX 
    abbrev=8
    editor = vim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol 
    excludesfile = ~/.dotfiles/gitignore

[log]
    abbrevcommit = yes
    decorate = short
    showroot = false
    date=short

[interactive]
    single = yes

[pretty]
    name = "%C(yellow)%h %C(white)%ad %C(yellow)%aN %C(white)%s"
    noname = "%C(yellow)%h %C(white)%ad %C(yellow)%s"

[alias] 
    ld = log --date=local --pretty=name
    lr = log --date=relative --pretty=name
    ll = log --date=local -g --pretty=name
    lc = local-changes --decorate=short --pretty=oneline
    graph = log -w --graph --full-history --all --pretty=oneline --decorate=short
    track = checkout -t
    ls = ls-files
    rl = reflog
    branches = branch -av
    d = diff --stat --summary
    ds = diff --staged
    ref = show-ref
    vimdiff = difftool
    head = log -1
    stat = status
    st = status
    ci = commit
    co = checkout 
    di = diff
    dc = diff --cached
    aa = add --all
    sm = submodule
    wc = whatchanged
    aa = add -A
    commit = commit -v
    ammend = commit --amend -v
    amend = commit --amend -v
    tags = tag -ln1
    remotes = remote -v

[pager]
    status = yes
    show-branch = yes

[clean]
    requireForce = no

[url "gitserve"]
    insteadOf = gs

[difftool "vimdiff"]
    cmd = vimdiff  \"$LOCAL\" \"$REMOTE\"

[format]
    pretty = noname

[diff]
	tool = vimdiff
	guitool = gvimdiff

[branch]
	autosetuprebase = always

[github]
    user = mkomitee
