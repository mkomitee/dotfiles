set guioptions+=mTBbrs
set editor="gvim -f"
set mapleader=','
set passkeys+=mail.google.com:jk<CR>,gi
set passkeys+=www.google.com/reader/view/:jku<CR>,gi
set followhints=1
set showtabline=multitab
set showstatuslinks=command
set hlfind
set incfind

" 1Password Integration
map <Leader>pw :emenu View.Login with 1Password<CR>

" Configuration Edit
map <Leader>ev :!~/bin/gvim ~/.pentadactylrc<CR>
map <Leader>ep :!~/bin/gvim ~/.pentadactylrc<CR>

" Configuration Reload
map <Leader>vr :source ~/.pentadactylrc<CR>
map <Leader>pr :source ~/.pentadactylrc<CR>

map -modes=n,v,c,i,t <M-f> <Nop>
map -modes=n,v,c,i,t <C-f> <Nop>
map -modes=n,v,c,i,t <M-g> <Nop>
map -modes=n,v,c,i,t <C-g> <Nop>
map -modes=n,v,c,i,t <F3> <Nop>

" FASTER PLEASE
nnoremap j 3j
nnoremap k 3k

" Switch tabs with J and K
nnoremap J :tn<CR>
nnoremap K :tp<CR>

" Clear search highlighting and normal highlighting.
nnoremap <Leader><space> <esc>:noh<CR>
nnoremap <esc> <esc>:noh<cr><esc>

" Shut up.
javascript dactyl.beep = function() { return false; }
