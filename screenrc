activity "activity in %n (%t)"

bell '~Bell in window %'
vbell off

defscrollback 20480

autodetach on

startup_message off

deflog on
logfile ~/.screenlog/screenlog.%n_%m-%d-%y
caption always "%{= KW}%-w%{= yk}%n %t%{-}%+w %-="

# Allow scrollbars to work
termcapinfo xterm ti@:te@
termcapinfo xterm*|rxvt*|kterm*|Eterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'
term screen-256color
defhstatus "screen (^E) ^Et"
hardstatus off

bindkey "[D" prev
bindkey "[C" next
